{% extends "layout.njk" %}


{% block content %}


<form class = "card" method="POST" action="/instructors">
 <section class = "avatar">
 </section>

 <section class = "details">

    <h3>Novo Instrutor</h3>

    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder = "http://" required>
        </div>
       
    </div>

    <div class="item">
        <div>Instrutor</div>
        <div>
            <input type="text" name="name" placeholder = "Nome do instrutor" required>
        </div>
       
    </div>

     <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input type="date" name ="birth" required>
        
        </div>
    </div>

     <div class="item">
        <div>Sexo</div>
        <div>
        <span>
            <input type="radio"
            name = "gender"
            value="M" checked>

            Masculino
        </span>
    
        <span>
            <input type="radio"
            name = "gender"
            value ="F" >
            Feminino
        </span>
    
        </div>
    </div>

     <div class="item">
        <div>Àrea de atuação</div>
        <div>
           <input type="text"
           name = "services"
           placeholder = "Separe os serviços prestados por vírgula " required>
        </div>

    </div>

 
        <button type = "submit">Salvar</button>




 </section>
 
</form>


{% endblock content %}