{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section 
            class="avatar" 
            style="background: url({{instructor.avatar_url}})center center / cover no-repeat">

          </section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{instructor.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{instructor.age}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in instructor.services %}
                        {{service}}
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{instructor.created_at}}</div>
            </div>

            <a class="btnEditar" href="/instructors/{{instructor.id}}/edit">
                Editar
            </a>

        </section>

    </div>

{% endblock content %}